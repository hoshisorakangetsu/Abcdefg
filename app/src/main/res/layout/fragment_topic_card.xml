<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:elevation="24dp"
    app:cardCornerRadius="24dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="12dp"
    app:cardElevation="16dp"
    tools:layout_gravity="center"
    app:contentPadding="16dp"
    tools:context=".TopicCardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Jan 2024"
                android:textColor="?colorOutline"
                android:textStyle="bold"
                android:textSize="14sp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/tvReplyCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 replies"
                android:textColor="?colorOutline"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTopicTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="hello_blank_fragment"
            android:textColor="?colorPrimary"
            android:textStyle="bold"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvTopicContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam tincidunt elit dolor. Integer varius pretium velit at fringilla. Aliquam neque orci, efficitur in est id." />

    </LinearLayout>

</androidx.cardview.widget.CardView>
