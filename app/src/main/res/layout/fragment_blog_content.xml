<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context=".EventDetailFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:paddingHorizontal="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/mock_pfp"
                        app:shapeAppearanceOverlay="@style/roundedFull" />

                    <Space
                        android:layout_width="16dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="User 1"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvBlogPostDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="28 Apr 2024 18:59"
                            android:textColor="?colorOutline"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvBlogTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blog Title"
                    android:textColor="?colorPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/sivEventBg"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:elevation="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                app:shapeAppearanceOverlay="@style/roundedSm" />

            <!-- in future this will be populated dynamically -->
            <LinearLayout
                android:id="@+id/llBlogContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas ut semper ipsum. Pellentesque elementum elit in dui sollicitudin, ut rutrum leo mollis. Curabitur eget mi nulla. Duis consequat odio at mollis cursus. Duis eget odio ut sapien tempor tempor id nec est. Fusce aliquam vitae enim eu finibus. Quisque sed hendrerit libero.\n\nSed molestie, lorem in vestibulum ornare, diam lectus feugiat erat, in pretium nulla ante sit amet nunc. Nunc quis cursus sem. Donec volutpat placerat magna eget volutpat. Ut non maximus risus. Nam eu neque ac odio laoreet aliquet. Mauris imperdiet sapien tempus, ultrices lectus eu, ornare lacus. Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos himenaeos. Sed sodales vitae tortor in vestibulum. Morbi gravida tellus ac ultricies vehicula. Curabitur eu lorem gravida, bibendum leo at, dignissim eros. Sed pretium, nunc a interdum rhoncus, nulla ex dictum orci, quis vehicula metus lectus eget sapien. Mauris ornare libero tincidunt ultricies consectetur. Sed consectetur sem ut felis porta, at convallis est semper." />

            </LinearLayout>

            <!-- hack to displace bottom bar (tmr see if still need bottom bar or not) -->
            <LinearLayout
                android:id="@+id/llBottomDisplace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/rounded_top_surface_high_bg"
                android:padding="16dp">

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save Blog"
                    app:cornerRadius="99999dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_top_surface_high_bg"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnJoinEvent"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Blog"
            app:cornerRadius="99999dp" />
    </LinearLayout>
</FrameLayout>
